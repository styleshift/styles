{
  "name": "@styleshift/styles",
  "version": "0.0.34",
  "type": "module",
  "types": "dist/index.d.ts",
  "description": "A plain and simple UI library for Tailwind CSS using Class Variance Authority",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "author": "Jeroen Gerits <jeroen@gerits.email>",
  "scripts": {
    "format": "prettier . --write",
    "build": "rollup -c",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "class-variance-authority": "^0.7.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/styleshift/styles.git"
  },
  "homepage": "https://www.npmjs.com/package/@styleshift/styles",
  "packageManager": "pnpm@9.15.3",
  "devDependencies": {
    "prettier": "^3.4.2",
    "rollup": "^4.30.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-commonjs": "^28.0.2"
  }
}
