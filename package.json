{
  "name": "@styleshift/styles",
  "version": "0.0.57",
  "type": "module",
  "types": "./dist/index.d.ts",
  "description": "A plain and simple UI library for Tailwind CSS using Class Variance Authority",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "author": "Jeroen Gerits <jeroen@gerits.email>",
  "scripts": {
    "format": "prettier . --write",
    "build": "rollup -c",
    "publish": "npx prettier . --write && npm run build && git add -A && git commit -am 'wip publish' && git push && npm run docs:publish && npm publish",
    "prepublishOnly": "npm run build",
    "docs:build": "typedoc --out docs src/index.ts",
    "docs:deploy": "gh-pages -d docs",
    "docs:publish": "npm run docs:build && npm run docs:deploy"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/styleshift/styles.git"
  },
  "homepage": "https://www.npmjs.com/package/@styleshift/styles",
  "docs": "https://styleshift.github.io/styles/",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "cva": "^1.0.0-beta.2",
    "prettier": "^3.4.2",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.25.13"
  }
}
