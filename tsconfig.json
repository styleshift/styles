{
 "compilerOptions": {
  "target": "ES2020",
  "module": "ESNext",
  "lib": ["ESNext", "DOM"],
  "moduleResolution": "node",
  "strict": true,
  "skipLibCheck": true,
  "declaration": true,
  "outDir": "./dist",
  "declarationDir": "./dist",
  "esModuleInterop": true,
  "isolatedModules": true,
  "forceConsistentCasingInFileNames": true
 },
 "include": ["src/**/*.ts", "src/**/*.tsx"],
 "exclude": ["node_modules", "dist"]
}
